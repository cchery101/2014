<section id="news">
  <div>
    <h2><a href="/news/"><img src="{{assets}}/images/headings/news.svg" alt="News"></a></h2>
    <ol>
      {{#eachRecentNewsItem}}
        <li>
          <a href="/news/{{basename}}/">
            <time class="date" datetime="{{data.date}}">{{formatDate data.date "%d %b"}}</time>
            <span class="title">{{data.title}}</span>
          </a>
        </li>
      {{/eachRecentNewsItem}}
    </ol>
    {{#ifMoreNewsItem}}
      <p class="more"><a href="/news/">Older newsâ€¦</a></p>
    {{/ifMoreNewsItem}}
  </div>
</section>
